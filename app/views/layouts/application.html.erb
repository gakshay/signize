<!DOCTYPE html>
<html>
<head>
  <title>Signature</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body style="background-color: #e4f3f4;">
<div align="right" style="margin-right: 200px;">
<% if current_user %>
 <span>Welcome <%= current_user.email%> | <a href='/users/sign_out'>Logout</a> </span>
<% else %>
  <a href="/users/sign_in">Login</a> | <a href="/users/sign_up"> Register </a>
<% end %>
 
</div>
<div style="width:900px; margin:auto; background-color: #ddd; min-height: 800px; padding: 20px;">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>
</body>
</html>
